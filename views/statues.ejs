<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Sculptures</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="../css/statues.css">
</head>
<body>
<div class="root">
    <div class="banner-container">
        <h1 class="title flex-item-1">Super Sculptures</h1>
        <img src="../public/img/sculpture_logo.png" alt="Block M" class="logo flex-item-2" width="250px" onclick="loadHome()" />
        <form id="searchForm" action="/search" class="input-container flex-item-3" method="GET">
            <input type="text" placeholder="Find a sculpture" id="searchInput" name="q" class="inputField flex-item-3"/>
            <button type="submit" class="btn btn-primary mt-3">Search</button>
        </form>
        <% // <input type="text" placeholder="Useless search bar to take up space" class="inputField flex-item-3" /> %>
        <i class="bi bi-gear-fill"></i>
        <i class="bi bi-person-fill"></i>
        <i class="bi bi-cart-fill"></i>
    </div>

    <br>
    <br>
    <br>
    <br>

    <div class="text-center fs-1">Items For Sale</div>
    <div class="container">
        <div class="row" id="statuesContainer">
            <% statues.forEach(statue => { %>
                <div class="col-3">
                    <div class="card" style="width: 15rem;" onclick="window.location.href='/description/<%= statue.id %>';">
                        <img src="../img/<%= statue.image %>" class="card-img-top" alt="<%= statue.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= statue.name %></h5>
                            <p class="card-text">$<%= statue.cost %>.00</p>
                            <a href="#" class="btn btn-primary">Add to cart</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>
</body>
</html>
